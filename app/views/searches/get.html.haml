#page.container_12
  #header.grid_12
    Postgres VAMP Archive
  #search.grid_12
    %form{:action => '/search', :method => :post}
      %dl#original-inputs
        %dt
          %select{:name => "operand", :size => "1"}
            %option{:value => "all"}
              All
            %option{:value => "any"}
              Any
        %dd
          %select{:name => "type", :size => "1"}
            - Avm.fetch(:all).each do |tag|
              %option{:value => tag.id}
                = tag.tag_name
          %select{:name => "conditional", :size => "1"}
            %option{:value => "is"}
              is
            %option{:value => "is_not"}
              is not
            %option{:value => "contains"}
              contains
            %option{:value => "does_not_contain"}
              does not contain
          %input{:type => "text", :name => "search", :size => "30"}
          %a{:href => "#", :class => "minus", :onclick => "removeLine(this);return false"}
            %img{:src => "images/minus-icon-24.png"}
          %a{:href => "#", :class => "plus", :onclick => "duplicateInputs();return false"}
            %img{:src => "images/plus-icon-24.png"}
      %input{:type => 'submit', :value => 'search'}
  .clear
  #content
    - @results.each do |result|
      .grid_4
        .result
          %h5
            = result.title
          = result.abstract
    .clear
